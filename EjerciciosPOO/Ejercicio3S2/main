
import java.util.*;
public class Main {

    public static void main(String[] args){

        Scanner sc = new Scanner(System.in);
        System.out.println("Ingrese la operacion que desee operar (primer numero/operador/segundo numero): ");
        String input = sc.nextLine();
        ClassCapturador e = new ClassCapturador();
        List operacion = e.enlistar(input);
        System.out.println("El resultado de la operaci√≥n es: ");
        System.out.println(e.resultado(operacion).getNum());
        System.out.println("*********Operacion terminada*********");
    }
}
